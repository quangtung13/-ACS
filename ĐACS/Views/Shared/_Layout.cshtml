                </ul>

                <ul class="navbar-nav">


                    <li>@Html.ActionLink(" ", "GioHang", "GioHang", new { area = "" }, new { @class = "bi bi-basket nav-link" })</li>
                    <li id="GioHangPartial"> </li>

                </ul>
                <div class="navbar-right">
                    @if ((NGUOIDUNG)Session["TENDANGNHAP"] == null)
                    {

                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Đăng nhập", "DangNhap", "User", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Đăng ký", "DangKy", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
