                    else
                    {
                        NGUOIDUNG nd = (NGUOIDUNG)Session["TENDANGNHAP"];
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Hello " + nd.TENDANGNHAP + "!", "Home", "Store", new { id = nd.TENDANGNHAP }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Đăng xuất", "LogOff", "User", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>

                    }
                </div>
            </div>
        </div>

    </nav>



    <script type="text/javascript">
        function getGioHangPartial() {
            $.ajax({
                type: 'GET',
                url: "@Url.Action("GioHangPartial", "GioHang")",
                success: function (result) {
                    $("#GioHangPartial").html(result);
                }
            });
